    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/practice_main.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            // "additionalSOLibSearchPath": "${workspaceFolder}\\Debug\\libs",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}/build;${workspaceFolder}/build/Debug"
                },
            ],
            
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb使能GDB整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "前置构建任务:Pre Build Task",

        }

    ]
}